<UserControl x:Class="PAMP.Views.PencilOptView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PAMP.Views"
             mc:Ignorable="d" 
             d:DesignHeight="265" d:DesignWidth="150">
    <Grid>
        <StackPanel>
            <TextBlock Text="Pencil options" Foreground="White"
                       Margin="5" FontSize="16"></TextBlock>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Size" Foreground="White"
                       Margin="5" HorizontalAlignment="Center"></TextBlock>
                <Slider Grid.Column="1" Margin="5" Minimum="1" Maximum="32" Value="{Binding Size}"></Slider>
            </Grid>
        </StackPanel>          
    </Grid>
</UserControl>
